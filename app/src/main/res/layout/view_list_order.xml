<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2px"
    android:background="#2D000000"
    android:orientation="horizontal"
    android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1.3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/noimage"
                            android:id="@+id/imgview_layout"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tên Sản Phẩm"
                            android:textSize="25dp"
                            android:id="@+id/txttensporder"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text=" 15,000,000"
                                android:textColor="#F44336"
                                android:id="@+id/txtgiasporder"
                                android:textSize="20dp"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Số Lượng : "
                                        android:textSize="20dp"
                                        android:id="@+id/textviewsl"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:id="@+id/txtslsporder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:textColor="@color/black"
                                        android:textSize="20dp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textviewsl">
                                <TextView
                                    android:layout_marginRight="5dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/txttimeorder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15:30 Ngày 20/12/2021"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                            </RelativeLayout>

                        </LinearLayout>
                        <!--        android:focusable="false" cho phép click trong list view-->
                    </LinearLayout>
                </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>