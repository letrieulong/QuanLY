<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.InforFragment">

    <RelativeLayout
        android:id="@+id/relativelayoutinfor"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Cá Nhân"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ Tên : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edtnameinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:hint="lê triệu long"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="15dp"
                android:textSize="20dp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edtsdtinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1234567890"
                android:inputType="phone"
                android:maxLength="10"
                android:visibility="invisible"
                android:paddingLeft="15dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/iedtmailinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:hint="abc@gmail.com"
                android:visibility="invisible"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edtaddressinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:hint="123abc"
                android:visibility="invisible"
                android:paddingLeft="15dp"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnupdateinfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btncancler"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/viewedt"
            android:text="Cập Nhật Thông Tin"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btncancler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/viewedt"
            android:text="Hủy"
            android:textSize="20dp" />
    </RelativeLayout>


</LinearLayout>